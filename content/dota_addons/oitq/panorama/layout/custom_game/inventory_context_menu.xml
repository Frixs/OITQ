<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/inventory_context_menu.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/inventory_context_menu.js" />
	</scripts>
	<Panel class="ItemMenu">
		<Button class="ItemMenuButton" id="ShowInShop" onmouseactivate="OnShowInShop()">
			<Label text="Show In Shop" />
		</Button>
		<Button class="ItemMenuButton" id="Sell" onactivate="OnSell()">
			<Label text="Sell" />
		</Button>
		<Button class="ItemMenuButton" id="DropItem" onactivate="OnDropItem()">
			<Label text="Drop Item" />
		</Button>
	</Panel>
</root>
